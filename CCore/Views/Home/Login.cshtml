@{
    ViewBag.Title = "DKKY";
    Layout = "~/Shared/_Layout.cshtml";
}
@using CCore.Models
@model User

<form asp-controller="Home" asp-action="Login" method="post" class="form form-horizontal">

    <div class="row text-center" style="width:100%">
        <div style="width:50%; float:none; margin:0 auto">
            <div class="form-group">
                <img src="https://image.ibb.co/iKfYKx/computer.jpg" />
            </div>
            <div class="form-group">
                <div class="col-md-pull-10">
                    <input type="text" class="form-control" id="Email" asp-for="Email" placeholder="Email" />
                    <span class="text-danger" asp-validation-for="Email"></span>
                </div>
            </div>
            <div>
                <div class="col-md-pull-10">
                    <input type="password" class="form-control" id="PassWord" asp-for="PW" placeholder="PassWord" />
                    <span class="text-danger" asp-validation-for="PW"></span>
                </div>
            </div>
            <br />
            <button type="submit" class="btn btn-danger">로그인</button>
            <button type="button" class="btn btn-primary">비밀번호 찾기</button>
            <br />

            <br />
            <button type="button" class="btn btn-secondary">구글 로그인</button>
            <button type="button" class="btn btn-warning">카카오 로그인</button>
            <button type="button" class="btn btn-success">네이버 로그인</button>
        </div>
    </div>

</form>






